{
  "name": "boarding-node",
  "version": "0.0.1",
  "description":
    "Simple signup page for TestFlight beta testers (like Fastlane Boarding but built with Node.js)",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "npm run lint",
    "github-release": "conventional-github-releaser -p angular -r 1",
    "cm": "git-cz",
    "precommit": "npm test",
    "preversion": "npm test",
    "postversion": "git push && git push --tags && npm run github-release"
  },
  "author": "Filiosoft Labs <opensource@filiosoft.com>",
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^2.9.6",
    "conventional-github-releaser": "^2.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "nodemon": "^1.17.3"
  },
  "dependencies": {
    "add-testflight-user": "^1.1.0",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "itc-airship": "^1.1.6",
    "morgan": "^1.9.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
